<% if @tasks.any? %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>タスク</th>
      <th>ステータス</th>
      <th>ユーザー</th>
    </tr>
  </thead>
  <tbody>
<% @tasks.each do |task| %>
  <tr>
    <td>
<%= link_to task.content, task %>
    </td>
    <td>
<%= task.status %>      
    </td>
    <td>
<%= task.user_id %>   
    </td>
  </tr>
<% end %>
  </tbody>
</table>

<div>
  
<%= paginate @tasks %>

</div>

<% end %>

<%= link_to 'new task', new_task_path, class: "btn btn-primary" %>
