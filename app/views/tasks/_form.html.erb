

<%= form_for(task) do |t| %>

<% if task.errors.any? %>

<div class="alert alert-warning">
  <ul>
    <% task.errors.full_messages.each do |error| %>
    <li>
      
      <%= error %>
    </li>
    <% end %>
  </ul>
</div>

<% end %>

  <div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">

<div class="form-group">
<%= t.label :content, 'タスク' %>
<%= t.text_field :content, class: 'form-control'%>
</div>

<div class="form-group">
<%= t.label :status, 'ステータス' %>
<%= t.select :status, [["未着手", "未着手"], ["完了", "完了"]], {}, :prompt => "選択してください", class: 'form-control' %>
</div>

<div class="form-group">

<%#= t.label :user_id, 'ユーザー' %>
<%#= t.text_field :user_id, class: 'form-control' %>

<%= t.hidden_field :user_id, :value => @current_user.id, class: 'form-control' %>

<%= t.submit 'set', class: 'btn btn-primary' %>

<p><%= @current_user.id %></p>
<% end %>

    </div>
  </div>
  
